<%= form_with model: @cohort do |form| %>
    <form>
        <div class="field"> 
            <label> Cohort Name: </label>
            <%= form.text_field :name %> 
        </div>
        <div class="field"> 
            <label> Program Dates: </label>
            <%= form.date_field :start_date %> - <%= form.date_field :end_date %> 
        </div>
        <div class="field"> 
            <label> Description: </label>
            <%=form.text_area(:description, size: '50x10') %> 
        </div>
        <div class="field"> 
            <label> Course: </label>
            <%= form.select :course_id, options_for_select(@courses.collect {|c| [c.name, c.id]}, @cohort.course_id) %>
        </div>
        <div class="field"> 
            <label> Instructor: </label>
            <%= form.select :instructor_id, options_for_select(@instructors.collect {|i| [i.last_name, i.id]}, @cohort.instructor_id) %>
        </div>
        <div class="field"> <%= form.submit %> </div>
    </form>
  <% end %>