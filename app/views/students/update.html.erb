<%= form_with model: @student do |form| %>
    <form>
        <div class="field"> 
            <label> Last Name: </label> 
            <%= form.text_field :last_name %> 
        </div>
        <div class="field"> 
            <label> First Name: </label>
            <%= form.text_field :first_name %> 
        </div>
        <div class="field"> 
            <label> Age: </label>
            <%= form.number_field :age, in: 1...151 %> 
        </div>
        <div class="field"> 
            <label> Photo: </label>
            <%= form.text_field :pic %> 
        </div>
        <div class="field"> 
            <label> Cohort: </label>
            <%= form.select :cohort_id, options_for_select(@cohorts.collect {|c| [c.name, c.id]}, @student.cohort_id) %>
        </div>
        <div class="field"> 
            <%= form.submit %> 
        </div>
    </form>
  <% end %>